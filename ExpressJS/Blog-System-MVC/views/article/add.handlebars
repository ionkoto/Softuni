<form action="/article/add" method="POST" enctype='multipart/form-data' class="center-form">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="input-field" id="title" type="text" name="title" />
        <br>
        <br>
    </div>
    <div class="form-group">
        <label for="content">Content</label>
        <textarea class="input-field" id="content" name="content" rows="20"></textarea>
        <br>
        <br>
    </div>
    <div class="form-group">
        <label for="image">Image</label>
        <input class="input-field" type='file' id="image" name='image' accept='.jpg,.jpeg,.png'/>
        <br>
        <br>
    </div>
    <div class="form-group">
        <input class="form-btn btn" type="submit" value="Submit" />
    </div>
</form>