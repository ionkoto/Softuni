<form action="/cars/add" method="POST">

    <label for="make">Make</label>
    <input id="make" type="text" name="make" value="{{make}}"/>
    <br />
    <label for="model">Model</label>
    <input id="model" type="text" name="model" value="{{model}}"/>
    <br />
    <label for="image">Image</label>
    <input id="image" type="url" name="image" value="{{image}}"/>
    <br />
    <label for="pricePerDay">Price Per Day</label>
    <input id="pricePerDay" type="number" name="pricePerDay" value="{{pricePerDay}}"/>
    <br />
    <input type="submit" value="Add" />

</form>

