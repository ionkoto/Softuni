<!DOCTYPE html>
<html lang="en">
<head>
  <title>My Cool Blog System</title>
  <link href="/css/site.css" type="text/css" rel="stylesheet" />
</head>
<body>
  <div class="container">
    <ul class="menu">
      <li><a href="/">Home</a></li>
      <li><a href="/cars/all">All cars</a></li>
      {{#if isAdmin}}
          <li><a href="/cars/add">Add Car</a></li>
      {{/if}}
      <li></li>
    </ul>
{{#if currentUser}}
    <ul class="user-profile-form">
      <li>Hello, <b>{{currentUser.username}}</b>!</li>
      <li>
          <form id="logout-form" action="/users/logout" method="POST"></form>
          <a href="/users/me">My Profile</a>
          <a href="javascript:document.getElementById('logout-form').submit()">Logout</a>
      </li>
    </ul>

      {{else}}
          <ul class="user-profile-form">
              <li><a href="/users/register">Register</a></li>
              <li><a href="/users/login">Login</a></li>
          </ul>

      {{/if}}

    {{#if globalError}}
      <h3>{{globalError}}</h3>
    {{/if}}
    {{{body}}}
  </div>
</body>
</html>
