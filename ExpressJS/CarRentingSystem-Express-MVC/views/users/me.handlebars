<h2>{{user}}</h2>


<table>
    <tr>
        <th>
            Car
        </th>
        <th>
            Date
        </th>
        <th>
            Days
        </th>
        <th>
            Total Price
        </th>
    </tr>
{{#each rentings}}
    <tr>
        <td>
            {{this.car.make}} {{this.car.model}}
        </td>
        <td>
            {{this.rentedOn}}
        </td>
        <td>
            {{this.days}}
        </td>
        <td>
            {{this.totalPrice}}
        </td>
    </tr>

{{else}}
    <h2>You haven't rented any cars yet.</h2>
{{/each}}
</table>