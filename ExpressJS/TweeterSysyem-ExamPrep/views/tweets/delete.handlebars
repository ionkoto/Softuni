<div class="form-container">
    <h1 class="centered">Are you sure you want to delete this tweet?</h1>
    <h2 class="centered">Author: {{this.author}}</h2>
    <form action="/tweet/{{this.id}}/delete" method="POST">
        <textarea name="content" rows="10" disabled>{{this.content}}</textarea>
        <br />
        <input type="submit" value="Delete" class="delete"/>
        <a href="/"><input type="button" class="button" value="Cancel"></a>
    </form>
</div>