<div class="form-container">
    <form class="add-thread-form" action="/post/{{thread._id}}/{{thread.title}}/edit" method="POST">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" placeholder="Post title" value="{{thread.title}}">

        <label for="description">Description</label>
        <textarea id="description" name="description" placeholder="Post content...">{{thread.description}}</textarea>

        <input type="submit" value="Submit">
    </form>
</div>

