{{#each threads}}
    <div class="single-post">
        <h2>{{this.title}}</h2>
        <p>{{this.description}}</p>
        <a href="/post/{{this._id}}/{{this.title}}">Read Post</a>
        <p>Views: {{this.views}}</p>
    </div>
{{else}}
    <h2>No posts available!</h2>
{{/each}}

<div class="font-3x paging">
    {{#if hasPrevPage}}
        <a href="/list?page={{prevPage}}">Prev Page</a>
        &nbsp; &nbsp; &nbsp;
    {{/if}}
    {{#if hasNextPage}}
        <a href="/list?page={{nextPage}}">Next Page</a>
    {{/if}}
</div>